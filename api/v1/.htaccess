#Block dangerous accesses
#####################################################################################################
RewriteCond %{QUERY_STRING} proc/self/environ [OR]
RewriteCond %{QUERY_STRING} mosConfig_[a-zA-Z_]{1,21}(=|\%3D) [OR]
RewriteCond %{QUERY_STRING} base64_encode.*(.*) [OR]
RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|[|\%[0-9A-Z]{0,2})
RewriteRule ^(.*)$ index.php [F,L]

#Set default charset, language and headers
#####################################################################################################
AddDefaultCharset UTF-8
AddLanguage en-US .html .htm .css .js .php .xml .json .txt
Header add X-Frame-Options SAMEORIGIN
Header unset X-Powered-By

#Extra MIME types
#####################################################################################################
AddType application/x-endnote-connection enz
AddType application/x-endnote-filter enf
AddType application/x-spss-savefile sav
AddType video/mp4 mp4
AddType video/webm webm
AddType video/ogg ogv

#Rewrite API requests
#####################################################################################################
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-l
RewriteRule .* index.php [QSA,L]